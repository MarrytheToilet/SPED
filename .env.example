# ==========================
# MinerU API配置
# ==========================
MINERU_TOKEN=your_mineru_token_here
MINERU_API_BASE=https://mineru.net/api/v4

# MinerU 上传配置（可选）
BATCH_SIZE=200
UPLOAD_ENABLE_FORMULA=True
UPLOAD_LANGUAGE=en
UPLOAD_LAYOUT_MODEL=doclayout_yolo
UPLOAD_ENABLE_TABLE=True
FILE_PARSE_METHOD=auto
FILE_APPLY_OCR=False

# 下载配置（可选）
DOWNLOAD_RETRY=3
DOWNLOAD_TIMEOUT=300

# ==========================
# 数据库配置
# ==========================
DB_PATH=data/artificial_joint.db

# ==========================
# OpenAI配置
# ==========================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Agent配置（可选）
AGENT_MAX_ITERATIONS=5
AGENT_TEMPERATURE=0.1
AGENT_MAX_TOKENS=1000
AGENT_ENABLE_MEMORY=True

# ==========================
# 日志配置
# ==========================
LOG_LEVEL=INFO
